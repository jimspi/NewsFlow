// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  role          Role      @default(REPORTER)
  jobTitle      String?
  department    String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  stories       Story[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Story {
  id                  String           @id @default(cuid())
  headline            String
  pitch               String           @db.Text
  status              StoryStatus      @default(PENDING)
  currentLevel        Int              @default(2)
  newsValue           Float?
  impact              String?
  bucket              String?
  character           String?
  accountabilityAngle String?          @db.Text
  urgencyScore        Float?
  competitorStatus    String?
  daysInPipeline      Int              @default(0)
  publicInterest      String?          @db.Text
  aiInsights          String[]
  documentsNeeded     String[]
  resources           String[]

  userId              String
  user                User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  levelHistory        LevelHistory[]

  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
}

model LevelHistory {
  id        String   @id @default(cuid())
  level     Int
  status    String
  feedback  String?  @db.Text
  timeSpent String?
  createdAt DateTime @default(now())

  storyId   String
  story     Story    @relation(fields: [storyId], references: [id], onDelete: Cascade)
}

enum Role {
  REPORTER
  EXECUTIVE_PRODUCER
  NEWS_DIRECTOR
}

enum StoryStatus {
  PENDING
  APPROVED
  KILLED
  NEEDS_DEVELOPMENT
}
